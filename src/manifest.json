{

	"manifest_version": 2,
	"name": "BURP",
	"version": "0.6",
	
	"description": "Productivity utilities for XTRF",
	
	"permissions": ["activeTab"],

	"browser_action": {
		"default_icon": {
			"16": "icons/16.png",
			"32": "icons/32.png",
			"48": "icons/48.png",
			"96": "icons/96.png"
		},
		"default_title": "BURP 0.6"
	},
	
	"content_scripts": [
		{
			"matches":["*://*/xtrf/*", "https://jira.dev.xtrf.eu/browse/*"],
			"js": ["content_scripts/class.js", "content_scripts/xtrf.js", "content_scripts/main.js", "content_scripts/conditional.js"]
		}
	]

}
